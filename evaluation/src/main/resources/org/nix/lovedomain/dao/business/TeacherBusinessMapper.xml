<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.nix.lovedomain.dao.business.TeacherBusinessMapper">

    <select id="findTeacherBySql" resultType="org.nix.lovedomain.model.Teacher">
        SELECT * FROM `teacher` WHERE 1=1
        <if test="sql!=null">
            ${sql}
        </if>
        <if test="page!=null and limit!=null">
            LIMIT #{page},#{limit};
        </if>
    </select>

    <select id="countTeacherBySql" resultType="java.lang.Long">
        SELECT count(*) FROM `teacher` WHERE 1=1
        <if test="sql!=null">
            ${sql}
        </if>
    </select>

    <select id="findTeacherByCourseId" resultType="org.nix.lovedomain.model.Teacher">
        SELECT
	    *
        FROM
            `teacher` AS t
        LEFT JOIN teacher_course AS tc ON t.accountId = tc.teacherId
        WHERE
            courseId = #{courseId};
    </select>

</mapper>