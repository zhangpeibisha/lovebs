<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.nix.lovedomain.dao.business.ProfessionBusinessMapper">

    <select id="findProfessionPageBySql" resultType="org.nix.lovedomain.model.Profession">
        SELECT * FROM `profession` WHERE 1=1
          <if test="sql!=null">
              ${sql}
          </if>
        <if test="page!=null and limit!=null">
            LIMIT #{page},#{limit};
        </if>
    </select>

    <select id="countProfessionPageBySql" resultType="java.lang.Long">
        SELECT count(*) FROM `profession` WHERE 1=1
        <if test="sql!=null">
            ${sql}
        </if>
    </select>

</mapper>