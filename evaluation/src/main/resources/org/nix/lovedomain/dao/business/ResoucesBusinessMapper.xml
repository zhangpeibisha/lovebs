<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.nix.lovedomain.dao.business.ResoucesBusinessMapper">

    <select id="findResourcesPage" resultType="org.nix.lovedomain.model.Resources">
        SELECT
            *
        FROM
        `role`
        <if test="key!=null">
            <bind name="ikey" value="'%' + key + '%'" />
            WHERE
            `name` LIKE #{ikey}
            OR description LIKE #{ikey}
        </if>
        <if test="offset!=null and limit!=null">
            LIMIT #{offset},#{limit};
        </if>

    </select>

    <select id="countResources" resultType="java.lang.Integer">
        SELECT
        count(*)
        FROM
        `role`
        <if test="key!=null">
            <bind name="ikey" value="'%' + key + '%'" />
            WHERE
            `name` LIKE #{ikey}
            OR description LIKE #{ikey}
        </if>
        <if test="offset!=null and limit!=null">
            LIMIT #{offset},#{limit};
        </if>

    </select>

</mapper>