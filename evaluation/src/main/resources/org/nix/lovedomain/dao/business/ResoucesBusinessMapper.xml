<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.nix.lovedomain.dao.business.ResourcesBusinessMapper">

    <select id="findResourcesPage" resultType="org.nix.lovedomain.dao.model.ResourcesModel">
        SELECT
        *
        FROM
        `resources`
        <if test="key!=null">
            <bind name="ikey" value="'%' + key + '%'"/>
            WHERE
            `name` LIKE #{ikey}
            OR description LIKE #{ikey}
        </if>
        <if test="offset!=null and limit!=null">
            LIMIT #{offset},#{limit};
        </if>

    </select>

    <select id="countResources" resultType="java.lang.Integer">
        SELECT
        count(*)
        FROM
        `resources`
        <if test="key!=null">
            <bind name="ikey" value="'%' + key + '%'"/>
            WHERE
            `name` LIKE #{ikey}
            OR description LIKE #{ikey}
        </if>
        <if test="offset!=null and limit!=null">
            LIMIT #{offset},#{limit};
        </if>

    </select>

    <!--批量插入-->
    <insert id="batchInsertResources" parameterType="org.nix.lovedomain.dao.model.ResourcesModel">
        insert into resources(url,`name`,description,`use`,permissionAll,method)
        values
        <foreach collection="resources" item="item" open="(" close=")" separator=",">
            #{item.url,jdbcType=VARCHAR},
            #{item.name,jdbcType=VARCHAR},
            <if test="item.description == null">
                "",
            </if>
            <if test="item.description != null">
                #{item.description,jdbcType=VARCHAR},
            </if>

            <if test="item.use == null">
                0,
            </if>
            <if test="item.use != null">
                #{item.use,jdbcType=TINYINT},
            </if>
            <if test="item.permissionall == null">
                0,
            </if>
            <if test="item.permissionall != null">
                #{item.permissionall,jdbcType=TINYINT},
            </if>
            <if test="item.method == null">
                'GET'
            </if>
            <if test="item.method != null">
                #{item.method,jdbcType=VARCHAR}
            </if>


        </foreach>
    </insert>

</mapper>